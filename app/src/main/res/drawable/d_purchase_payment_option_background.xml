    <shape android:shape="rectangle">
      <solid android:color="@color/d_commerce_payment_option_shadow_border"/>
      <corners android:radius="@dimen/commerce_payment_option_shadow_border_radius"/>
    </shape>
  </item>
  <item android:bottom="@dimen/commerce_payment_option_shadow_size">
