<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:gravity="bottom">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/edit_text_background_shape_radius"/>
      <solid android:color="@color/edit_text_background_disabled"/>
      <size
        android:width="@dimen/edit_text_background_shape_width"
        android:height="@dimen/edit_text_background_shape_height"/>
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <padding
        android:bottom="@dimen/edit_text_background_padding"
        android:left="@dimen/edit_text_background_padding"
        android:right="@dimen/edit_text_background_padding"
        android:top="@dimen/edit_text_background_padding"/>
    </shape>
  </item>
</layer-list>
