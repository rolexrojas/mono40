<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingEnd="24dp"
  android:paddingStart="24dp"
  tools:ignore="MissingPrefix">
  <TextView
    android:id="@+id/text_view"
    fontPath="@string/font_roboto_regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:lineSpacingExtra="8sp"
    android:textColor="@color/common_black_alpha_54"
    android:textSize="16sp"/>
  <android.support.design.widget.TextInputLayout
    android:id="@+id/text_input_layout"
    fontPath="@string/font_roboto_regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:lineSpacingExtra="8sp"
    android:textSize="16sp">
    <EditText
      android:id="@+id/edit_text"
      fontPath="@string/font_roboto_regular"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="text|textCapWords|textPersonName"
      android:lineSpacingExtra="8sp"
      android:textColor="@color/common_black_alpha_87"
      android:textColorHint="@color/common_primary"
      android:textSize="16sp"/>
  </android.support.design.widget.TextInputLayout>
</LinearLayout>