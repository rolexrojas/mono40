<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Container.Light.Primary"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:paddingTop="16dp">

        <TextView
            fontPath="@string/font_gothamRounded_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:lineSpacingExtra="8dp"
            android:text="@string/safenewpasswordmessage"
            android:textColor="#333"
            android:textSize="16sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/new_password"
        style="@style/Label.Light.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_title"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/newpassword"
        android:textColor="@color/black" />

    <com.tpago.movil.dep.widget.TextInput
        android:id="@+id/new_password_input"
        style="@style/Widget.TextInput.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_description"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:inputType="text|textPassword"
        android:maxLines="1"
        android:nextFocusDown="@+id/confirm_password" />

    <TextView
        android:id="@+id/confirm_password"
        style="@style/Label.Light.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_title"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/confirmnewpassword"
        android:textColor="@color/black" />

    <com.tpago.movil.dep.widget.TextInput
        android:id="@+id/confirm_password_input"
        style="@style/Widget.TextInput.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_description"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:inputType="text|textPassword"
        android:maxLines="1" />
</LinearLayout>
