<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/otherAmountConstraintLayout"
  android:layout_width="match_parent"
  android:layout_height="48dp"
  android:layout_marginTop="8dp"
  tools:ignore="MissingPrefix">

  <EditText
    android:id="@+id/otherAmountEditText"
    fontPath="@string/font_gothamRounded_book"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginTop="0dp"
    android:background="@null"
    android:imeOptions="actionDone"
    android:inputType="numberDecimal"
    android:textColor="#333"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/otherAmountCurrencyTextView"
    fontPath="@string/font_gothamRounded_book"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="0dp"
    android:alpha="0.50"
    android:background="@null"
    android:textColor="#333"
    android:textSize="10sp"
    app:layout_constraintRight_toLeftOf="@+id/otherAmountEditText"
    app:layout_constraintTop_toTopOf="@+id/otherAmountEditText"/>

  <RadioButton
    android:id="@+id/otherAmountRadioButton"
    fontPath="@string/font_gothamRounded_book"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="0dp"
    android:ellipsize="end"
    android:text="Otro monto"
    android:textColor="#333"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/otherAmountCurrencyTextView"
    app:layout_constraintTop_toTopOf="parent"/>

  <View
    android:id="@+id/otherAmountView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:clickable="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="@+id/otherAmountEditText"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
