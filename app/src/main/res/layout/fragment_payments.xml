<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#F8F0F8"
  android:focusable="true"
  android:focusableInTouchMode="true"
  android:orientation="vertical">
  <com.gbh.movil.ui.view.widget.SearchView
    android:id="@+id/search_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/list_item_divider_inset"
    android:layout_marginStart="@dimen/list_item_divider_inset"
    app:hint="@string/payment_options_search_hint"/>
  <include layout="@layout/divider"/>
</LinearLayout>
