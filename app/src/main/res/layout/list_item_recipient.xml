<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  style="@style/ListItem.Normal"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:ignore="MissingPrefix">
  <ImageView
    android:id="@+id/recipient.picture"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:contentDescription="@string/recipient.picture"/>
  <include
    android:id="@+id/proceed_action"
    layout="@layout/action_proceed"/>
  <CheckBox
    android:id="@+id/checkbox_delete"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:clickable="false"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_marginStart="12dp"
    android:layout_toEndOf="@+id/recipient.picture"
    android:layout_toStartOf="@+id/proceed_action"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/recipient.label"
        fontPath="@string/font_gotham_rounded_medium"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="start|bottom"
        android:textAppearance="@style/RecipientLabelText.Medium"
        android:textColor="#333"
        android:textSize="16sp"/>
      <com.tpago.movil.dep.ui.view.widget.PrefixableTextView
        android:id="@+id/prefixable_text_view_total_owed"
        style="@style/Screen.Products.Text.Widget.Amount.Content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:gravity="bottom|end"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/recipient.extra"
        fontPath="@string/font_gotham_rounded_book"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="start|top"
        android:paddingTop="4dp"
        android:textAppearance="@style/RecipientExtraText"
        android:textColor="#333"
        android:textSize="10sp"/>
      <TextView
        android:id="@+id/text_view_due_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:gravity="top|end"
        android:textAppearance="@style/Text.Contact.PhoneNumber"/>
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>