<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <TextView
    style="@style/Label.Dark.Primary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/register_form_phone_number_label_title"/>
  <TextView
    style="@style/Label.Dark.Secondary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="60dp"
    android:layout_marginStart="60dp"
    android:layout_marginTop="10dp"
    android:text="@string/register_form_phone_number_label_description"/>
  <com.tpago.movil.widget.NotEditableTextInput
    android:id="@+id/text_input"
    style="@style/Widget.NotEditableTextInput.Dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="60dp"
    android:layout_marginStart="60dp"
    android:layout_marginTop="16dp"/>
  <com.tpago.movil.widget.NumPad
    android:id="@+id/num_pad"
    style="@style/Widget.NumPad.Dark"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="16dp"
    android:layout_weight="1"/>
  <Button
    android:id="@+id/button_move_to_next_screen"
    style="@style/Widget.Button.Dark.Gradient"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="@string/register_form_phone_number_button_move_to_next_screen"/>
</LinearLayout>