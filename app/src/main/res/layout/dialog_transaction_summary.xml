<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingEnd="24dp"
  android:paddingStart="24dp"
  tools:ignore="MissingPrefix">

  <TextView
    android:id="@+id/transactionIdTextView"
    fontPath="@string/font_roboto_regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:lineSpacingExtra="8sp"
    android:textColor="@color/black_27"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/recipientQuestionTextView"
    fontPath="@string/font_roboto_regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:lineSpacingExtra="8sp"
    android:textColor="@color/black_54"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/transactionIdTextView"/>

  <android.support.design.widget.TextInputLayout
    android:id="@+id/recipientAnswerTextInputLayout"
    fontPath="@string/font_roboto_regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:lineSpacingExtra="8sp"
    android:textSize="16sp"
    app:layout_constraintTop_toBottomOf="@+id/recipientQuestionTextView">

    <EditText
      android:id="@+id/recipientAnswerEditText"
      fontPath="@string/font_roboto_regular"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="text|textCapWords|textPersonName"
      android:lineSpacingExtra="8sp"
      android:textColor="@color/black_87"
      android:textColorHint="@color/primary"
      android:textSize="16sp"/>
  </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>