<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <com.tpago.movil.ui.view.widget.AppButton
    android:id="@+id/button_continue"
    style="@style/SignUp.Widget.Button"
    android:layout_alignParentBottom="true"
    android:text="Continuar"
    app:layout_heightPercent="8%"
    app:layout_widthPercent="100%"/>
  <com.tpago.movil.ui.view.widget.PercentLinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical">
    <TextView
      android:id="@+id/text_view_emoji"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:gravity="center_horizontal"
      android:textColor="@color/common_black"
      android:alpha="0.20"
      android:textSize="72sp"
      app:layout_marginTopPercent="11%"
      app:layout_widthPercent="28%"/>
    <TextView
      style="@style/SignUp.Widget.Label.Primary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="¡Bienvenido!"
      app:layout_marginTopPercent="9%"/>
    <TextView
      style="@style/SignUp.Widget.Label.Secondary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="Comencemos a crear tu nuevo perfil tPago 2.0"
      app:layout_marginEndPercent="17%"
      app:layout_marginStartPercent="17%"
      app:layout_marginTopPercent="1%"/>
    <EditText
      android:id="@+id/edit_text_phone_number"
      style="@style/SignIn.Widget.EditText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:digits="0123456789"
      android:hint="Número de teléfono"
      android:imeOptions="actionNext"
      android:inputType="number"
      android:nextFocusDown="@+id/edit_text_email"
      app:layout_marginEndPercent="17%"
      app:layout_marginStartPercent="17%"
      app:layout_marginTopPercent="5%"/>
    <EditText
      android:id="@+id/edit_text_email"
      style="@style/SignIn.Widget.EditText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Correo electrónico"
      android:imeOptions="actionNext"
      android:inputType="textEmailAddress"
      android:nextFocusDown="@+id/edit_text_email_confirmation"
      app:layout_marginEndPercent="17%"
      app:layout_marginStartPercent="17%"
      app:layout_marginTopPercent="1%"/>
    <EditText
      android:id="@+id/edit_text_email_confirmation"
      style="@style/SignIn.Widget.EditText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Confirmar correo electrónico"
      android:imeOptions="actionDone"
      android:inputType="textEmailAddress"
      app:layout_marginEndPercent="17%"
      app:layout_marginStartPercent="17%"
      app:layout_marginTopPercent="1%"/>
  </com.tpago.movil.ui.view.widget.PercentLinearLayout>
</android.support.percent.PercentRelativeLayout>