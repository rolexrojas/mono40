<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ListItem.Normal"
    tools:ignore="MissingPrefix"
    android:paddingHorizontal="14dp">
    <ImageView
        android:id="@+id/indicator"
        android:layout_width="@dimen/icon_size_18"
        android:layout_height="@dimen/icon_size_18"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/space_horizontal_20"
        android:visibility="gone"
        app:srcCompat="@drawable/settings_option_selectable_indicator"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_size_24"
        android:layout_height="@dimen/icon_size_24"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/space_horizontal_16"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/primaryTextView"
        style="@style/SettingsText.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toStartOf="@+id/indicator"
        android:ellipsize="end"/>
</RelativeLayout>