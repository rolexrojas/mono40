<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  style="@style/ListItem.Large"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView
    android:id="@+id/image_view_bank_logo"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_centerVertical="true"
    android:layout_marginEnd="20dp"
    android:contentDescription="@string/logo"/>
  <View
    android:id="@+id/view_anchor"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_centerVertical="true"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"/>
  <com.tpago.movil.d.ui.view.widget.PrefixableTextView
    android:id="@+id/prefixable_text_view_product_balance"
    style="@style/D.Screen.Products.Text.Widget.Amount.Content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/view_anchor"
    android:layout_alignParentEnd="true"
    android:layout_gravity="center"
    android:layout_marginStart="20dp"
    android:maxLines="1"/>
  <TextView
    android:id="@+id/text_view_query_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/view_anchor"
    android:layout_marginStart="20dp"
    android:maxLines="1"
    android:textAppearance="@style/Text.Contact.PhoneNumber"/>
  <Button
    android:id="@+id/button_query_balance"
    style="@style/ListItemButton"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:text="@string/balance"/>
  <TextView
    android:id="@+id/text_view_product_type"
    style="@style/D.Products.Label.Primary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/view_anchor"
    android:layout_toEndOf="@+id/image_view_bank_logo"
    android:layout_toStartOf="@+id/prefixable_text_view_product_balance"
    android:maxLines="1"/>
  <TextView
    android:id="@+id/text_view_product_identifier"
    style="@style/D.Products.Label.Secondary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view_anchor"
    android:layout_toEndOf="@+id/image_view_bank_logo"
    android:layout_toStartOf="@+id/text_view_query_time"
    android:maxLines="1"/>
</RelativeLayout>