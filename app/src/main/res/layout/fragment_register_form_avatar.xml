<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="@dimen/init_container_padding_top_normal">

  <TextView
    android:id="@+id/label_title"
    style="@style/D.Label.Dark.Primary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/register_form_avatar_label_title"/>

  <TextView
    android:id="@+id/label_description"
    style="@style/D.Label.Dark.Secondary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/label_title"
    android:layout_marginEnd="60dp"
    android:layout_marginStart="60dp"
    android:layout_marginTop="10dp"
    android:text="@string/register_form_avatar_label_description"/>

  <ImageView
    android:id="@+id/image_view_avatar"
    style="@style/ProfilePicturePlaceholder.Dark.Normal"
    android:layout_below="@+id/label_description"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="48dp"/>

  <Button
    android:id="@+id/button_move_to_next_screen"
    style="@style/D.Widget.Button.Dark.Gradient"
    android:layout_alignParentBottom="true"/>
</RelativeLayout>