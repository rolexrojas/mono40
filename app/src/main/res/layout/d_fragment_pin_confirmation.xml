<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <FrameLayout
    android:id="@+id/frame_layout_container"
    style="@style/Container.Dark.Primary">

    <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/linear_layout_container"
      style="@style/PinConfirmationContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
          android:layout_width="68dp"
          android:layout_height="34dp"
          android:layout_gravity="center"
          android:contentDescription="@string/logo"
          app:srcCompat="@drawable/logo"/>
      </FrameLayout>

      <TextView
        style="@style/PinConfirmationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:text="@string/pin_confirmation"/>

      <TextView
        android:id="@+id/text_view_action_description"
        style="@style/PinConfirmationDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"/>

      <com.tpago.movil.d.ui.view.widget.PinView
        android:id="@+id/pin_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"/>

      <com.tpago.movil.app.ui.DNumPad
        android:id="@+id/num_pad"
        style="@style/DNumPad.Dark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>
  </FrameLayout>
</io.codetail.widget.RevealFrameLayout>