<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  style="@style/Container.Light.Primary">

  <Button
    android:id="@+id/button_submit"
    style="@style/Button.Light.Primary"
    android:text="@string/disburse"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <LinearLayout
    android:id="@+id/linear_layout_summary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/space_horizontal_20"
    android:paddingStart="@dimen/space_horizontal_20"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.legacy.widget.Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_vertical_16"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <com.mono40.movil.app.ui.Label
        style="@style/Label.Light"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="start"
        android:text="@string/disburse_product_confirm_amount"/>

      <com.mono40.movil.app.ui.LabelPrefix
        android:id="@+id/label_amount"
        style="@style/LabelMoney.Light.LightBook"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="end"/>
    </LinearLayout>

    <androidx.legacy.widget.Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_vertical_8"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <com.mono40.movil.app.ui.Label
        style="@style/Label.Light"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="start"
        android:text="@string/disburse_product_confirm_term"/>

      <com.mono40.movil.app.ui.Label
        android:id="@+id/label_term"
        style="@style/Label.Light"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="end"/>
    </LinearLayout>

    <androidx.legacy.widget.Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_vertical_8"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <com.mono40.movil.app.ui.Label
        style="@style/Label.Light"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="start"
        android:text="@string/disburse_product_confirm_rate"/>

      <com.mono40.movil.app.ui.LabelPrefix
        android:id="@+id/label_rate"
        style="@style/LabelMoney.Light.LightBook"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="end"/>
    </LinearLayout>

    <androidx.legacy.widget.Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_vertical_8"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <com.mono40.movil.app.ui.Label
        style="@style/Label.Light"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="start"
        android:text="@string/disburse_product_confirm_insurance"/>

      <com.mono40.movil.app.ui.LabelPrefix
        android:id="@+id/label_insurance"
        style="@style/LabelMoney.Light.LightBook"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="end"/>
    </LinearLayout>

    <androidx.legacy.widget.Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_vertical_8"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <com.mono40.movil.app.ui.Label
        style="@style/Label.Light"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="start"
        android:text="@string/disburse_product_confirm_balance"/>

      <com.mono40.movil.app.ui.LabelPrefix
        android:id="@+id/label_balance"
        style="@style/LabelMoney.Light.LightBook"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="end"/>
    </LinearLayout>

    <androidx.legacy.widget.Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_vertical_16"/>

    <View
      style="@style/VerticalDivider.Line"
      android:layout_marginEnd="0dp"
      android:layout_marginStart="0dp"/>

    <androidx.legacy.widget.Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_vertical_8"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <com.mono40.movil.app.ui.Label
        style="@style/Label.Light"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="start"
        android:text="@string/disburse_product_confirm_fee"/>

      <com.mono40.movil.app.ui.LabelPrefix
        android:id="@+id/label_fee"
        style="@style/LabelMoney.Light.LightMedium"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="end"/>
    </LinearLayout>

    <androidx.legacy.widget.Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_vertical_8"/>

    <View
      style="@style/VerticalDivider.Line"
      android:layout_marginEnd="0dp"
      android:layout_marginStart="0dp"/>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/linear_layout_terms_and_conditions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/space_horizontal_20"
    android:paddingStart="@dimen/space_horizontal_20"
    app:layout_constraintBottom_toTopOf="@+id/button_submit"
    app:layout_constraintTop_toBottomOf="@+id/linear_layout_summary">

    <RadioButton
      android:id="@+id/radio_button_accept"
      style="@style/LabelDescription.Light"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawablePadding="@dimen/space_horizontal_16"
      android:text="Acepto los términos y condiciones de este producto."/>

      <com.mono40.movil.app.ui.Label
        android:id="@+id/label_terms_conditions"
        style="@style/LabelClickable.Dark.Primary"
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/space_horizontal_32"
        android:ellipsize="end"
        android:gravity="start"
        android:text="Ver Términos y Condiciones"
        android:clickable="true"
        android:onClick="onClick"/>

    <androidx.legacy.widget.Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_vertical_20"/>

    <RadioButton
      android:id="@+id/radio_button_decline"
      style="@style/LabelDescription.Light"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:checked="true"
      android:drawablePadding="@dimen/space_horizontal_16"
      android:text="No acepto"/>
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>