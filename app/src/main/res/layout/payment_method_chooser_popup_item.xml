<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/relative_layout_root"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="@dimen/payment_method_chooser_popup_item_height"
  android:background="@drawable/payment_method_chooser_popup_item"
  android:paddingEnd="@dimen/payment_method_chooser_item_padding_horizontal"
  android:paddingStart="@dimen/payment_method_chooser_item_padding_horizontal">
  <ImageView
    android:id="@+id/image_view_bank_logo"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"/>
  <TextView
    android:id="@+id/text_view_product_number"
    style="@style/Transactions.Label.PaymentMethodChooser.Secondary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_marginStart="20dp"
    android:gravity="start"
    android:maxLines="1"/>
  <TextView
    android:id="@+id/text_view_product_identifier"
    style="@style/Transactions.Label.PaymentMethodChooser.Secondary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginStart="20dp"
    android:layout_toEndOf="@+id/image_view_bank_logo"
    android:layout_toStartOf="@+id/text_view_product_number"
    android:gravity="start"/>
</RelativeLayout>