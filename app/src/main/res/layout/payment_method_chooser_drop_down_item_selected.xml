<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="@dimen/payment_method_chooser_item_selected_padding_vertical"
  android:paddingEnd="@dimen/payment_method_chooser_item_padding_horizontal"
  android:paddingStart="@dimen/payment_method_chooser_item_padding_horizontal"
  android:paddingTop="@dimen/payment_method_chooser_item_selected_padding_vertical">
  <ImageView
    android:id="@+id/image_view_bank_logo"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_centerVertical="true"/>
  <ImageView
    android:id="@+id/image_view_arrow_down"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_marginStart="20dp"
    app:srcCompat="@drawable/ic_arrow_drop_up_black_alpha_54_24dp"/>
  <TextView
    android:id="@+id/text_view_product_identifier"
    style="@style/Transactions.Label.PaymentMethodChooser.Primary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginStart="20dp"
    android:layout_toEndOf="@+id/image_view_bank_logo"
    android:layout_toStartOf="@+id/image_view_arrow_down"
    android:gravity="center"
    android:textAllCaps="true"/>
</RelativeLayout>
