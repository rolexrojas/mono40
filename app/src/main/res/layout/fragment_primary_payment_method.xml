<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Container.Light.Primary"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="MissingPrefix">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:paddingTop="16dp">

        <TextView
            fontPath="@string/font_gothamRounded_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:lineSpacingExtra="8dp"
            android:text="Selecciona la cuenta que quieres usar como primaria para realizar transacciones."
            android:textColor="#333"
            android:textSize="16sp" />
    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/payment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>
</LinearLayout>