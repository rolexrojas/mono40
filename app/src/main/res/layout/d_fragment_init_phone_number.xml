<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:paddingTop="@dimen/init_container_padding_top_normal">
  <TextView
    style="@style/D.Label.Dark.Primary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/init_phone_number_label_title"/>
  <TextView
    style="@style/D.Label.Dark.Secondary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="60dp"
    android:layout_marginStart="60dp"
    android:layout_marginTop="10dp"
    android:text="@string/init_phone_number_label_description"/>
  <com.tpago.movil.widget.TextFitterLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="60dp"
    android:layout_marginStart="60dp"
    android:layout_marginTop="16dp"
    app:maxTextSize="34sp"
    app:minTextSize="18sp">
    <com.tpago.movil.widget.NotEditableTextInput
      android:id="@+id/text_input"
      style="@style/Widget.NotEditableTextInput.Dark"
      android:layout_width="match_parent"
      android:layout_height="64dp"/>
  </com.tpago.movil.widget.TextFitterLayout>
  <com.tpago.movil.widget.NumPad
    android:id="@+id/num_pad"
    style="@style/D.Widget.NumPad.Dark"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="16dp"
    android:layout_weight="1"/>
  <Button
    android:id="@+id/button_move_to_next_screen"
    style="@style/D.Widget.Button.Dark.Gradient"
    android:text="@string/init_phone_number_button_move_to_next_screen"/>
</LinearLayout>