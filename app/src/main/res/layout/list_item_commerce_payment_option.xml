<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/commerce_payment_option_container"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="@dimen/commerce_payment_option_container_default_height"
  android:background="@drawable/commerce_payment_option_container_default_background"
  android:padding="@dimen/commerce_payment_option_container_default_padding">
  <ImageView
    android:id="@+id/bank_logo"
    android:layout_width="@dimen/bank_logo_size_large"
    android:layout_height="@dimen/bank_logo_size_large"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginEnd="12dp"
    android:contentDescription="@string/bank_logo"/>
  <TextView
    android:id="@+id/product_identifier"
    style="@style/App.Widget.CommercePaymentOption.ProductIdentifier"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignBottom="@+id/bank_logo"
    android:layout_alignTop="@+id/bank_logo"
    android:layout_toEndOf="@+id/bank_logo"/>
  <TextView
    android:id="@+id/product_owner_name"
    style="@style/App.Widget.CommercePaymentOption.ProductOwnerName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="12dp"/>
  <TextView
    android:id="@+id/product_number"
    style="@style/App.Widget.CommercePaymentOption.ProductNumber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/product_owner_name"
    android:layout_alignParentStart="true"/>
</RelativeLayout>