<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="200dp"
  android:background="@drawable/background_commerce_payment_option"
  android:padding="20dp"
  tools:ignore="MissingPrefix">
  <ImageView
    android:id="@+id/bank_logo"
    android:layout_width="@dimen/bank_logo_size_large"
    android:layout_height="@dimen/bank_logo_size_large"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginEnd="12dp"
    android:contentDescription="@string/bank_logo"/>
  <TextView
    android:id="@+id/product_identifier"
    fontPath="@string/font_gotham_rounded_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignBottom="@+id/bank_logo"
    android:layout_alignTop="@+id/bank_logo"
    android:layout_toEndOf="@+id/bank_logo"
    android:ellipsize="end"
    android:gravity="center_vertical"
    android:textColor="#333333"
    android:textSize="16sp"/>
  <TextView
    android:id="@+id/user_name"
    fontPath="@string/font_roboto_regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="12dp"
    android:ellipsize="end"
    android:textColor="#333333"
    android:textSize="14sp"/>
  <TextView
    android:id="@+id/product_number"
    fontPath="@string/font_roboto_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/user_name"
    android:layout_alignParentStart="true"
    android:ellipsize="end"
    android:textColor="#333333"
    android:textSize="18sp"/>
</RelativeLayout>