<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  style="@style/ListItem.Normal"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView
    android:id="@+id/image_view_bank_logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginEnd="@dimen/space_horizontal_16"
    android:contentDescription="@string/bank_logo"/>
  <TextView
    android:id="@+id/text_view_product_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toEndOf="@+id/image_view_bank_logo"
    android:gravity="center_vertical"
    android:textAppearance="@style/Dep.App.Text.Bank.Name.Bold"/>
</RelativeLayout>
