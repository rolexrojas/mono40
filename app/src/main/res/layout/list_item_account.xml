<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  style="@style/ListItemAccount"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent">

  <LinearLayout
    android:id="@+id/linear_layout_anchor"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="20dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/image_view_bank_logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:contentDescription="@string/logo"/>

    <TextView
      android:id="@+id/text_view_account_alias"
      style="@style/ListItemAccountAlias"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>

  <FrameLayout
    android:id="@+id/frame_layout_anchor"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="25dp">

    <Button
      android:id="@+id/button_query_account_balance"
      style="@style/ListItemButton"
      android:layout_gravity="center"
      android:text="@string/balance"/>

    <com.gbh.movil.ui.view.widget.AmountView
      android:id="@+id/amount_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:visibility="gone"/>
  </FrameLayout>

  <TextView
    android:id="@+id/text_view_bank_name"
    style="@style/ListItemAccountBankName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_toEndOf="@+id/linear_layout_anchor"
    android:layout_toStartOf="@+id/frame_layout_anchor"/>
</RelativeLayout>