<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/common_black_alpha_40">
  <ImageView
    android:id="@+id/image_view_art"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_margin="30dp"
    android:adjustViewBounds="true"
    android:scaleType="fitXY"
    android:src="@drawable/tutorial_tab_art_01"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_alignParentBottom="true"
    android:background="@color/common_primary"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
      android:id="@+id/view_pager"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"/>
    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="18dp">
      <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        style="@style/D.Widget.TabLayout.Dark"
        android:layout_gravity="center_vertical"/>
      <Button
        android:id="@+id/button_skip"
        style="@style/D.Widget.Button.Dark.Transparent.Rounded"
        android:layout_width="87dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="30dp"
        android:text="@string/ok"/>
    </FrameLayout>
  </LinearLayout>
</RelativeLayout>
