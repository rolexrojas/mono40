<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:paddingBottom="@dimen/dialog_padding_bottom"
  android:paddingTop="@dimen/dialog_padding_top"
  tools:ignore="MissingPrefix">
  <RelativeLayout
    android:id="@+id/relative_layout_choose_from_gallery"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialog_label_action_container_height"
    android:background="?attr/selectableItemBackground"
    android:paddingEnd="@dimen/dialog_padding_horizontal"
    android:paddingStart="@dimen/dialog_padding_horizontal">
    <ImageView
      android:id="@+id/image_view_choose_from_gallery"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      app:srcCompat="@drawable/ic_insert_photo_black_18dp"/>
    <TextView
      style="@style/Dialog.Label.Action"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginStart="16dp"
      android:layout_toEndOf="@+id/image_view_choose_from_gallery"
      android:text="@string/dialog_avatar_creation_label_action_choose_from_gallery"/>
  </RelativeLayout>
  <RelativeLayout
    android:id="@+id/relative_layout_use_the_camera"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialog_label_action_container_height"
    android:layout_marginTop="16dp"
    android:background="?attr/selectableItemBackground"
    android:paddingEnd="@dimen/dialog_padding_horizontal"
    android:paddingStart="@dimen/dialog_padding_horizontal">
    <ImageView
      android:id="@+id/image_view_use_the_camera"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      app:srcCompat="@drawable/ic_camera_alt_black_18dp"/>
    <TextView
      style="@style/Dialog.Label.Action"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginStart="16dp"
      android:layout_toEndOf="@+id/image_view_use_the_camera"
      android:text="@string/dialog_avatar_creation_label_action_use_the_camera"/>
  </RelativeLayout>
</LinearLayout>