<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  style="@style/Container.Light.Primary"
  android:orientation="vertical"
  tools:ignore="MissingPrefix">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:paddingTop="16dp">

    <TextView
      android:id="@+id/label_title"
      style="@style/D.Label.Dark.Primary"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Selecciona tu banco"/>

    <TextView
      fontPath="@string/font_gothamRounded_book"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:lineSpacingExtra="8dp"
      android:text="Para continuar, selecciona el banco de tu beneficiario."
      android:textColor="#333"
      android:textSize="16sp"/>
  </FrameLayout>

  <include layout="@layout/d_reusable_divider"/>

  <android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"/>
  </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>