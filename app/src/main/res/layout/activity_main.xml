<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true">

  <com.tpago.movil.ui.view.widget.SlidingPaneLayout
    android:id="@+id/sliding_pane_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/background_menu"
      android:fitsSystemWindows="true"
      android:orientation="vertical">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/logo_menu"/>
      </FrameLayout>

      <TextView
        android:id="@+id/menu_item_payments"
        style="@style/MenuItem.Compound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:drawableStart="@drawable/icon_payments"
        android:text="@string/payments"/>

      <TextView
        style="@style/MenuItem.Compound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/icon_commerce"
        android:gravity="center_vertical"
        android:text="@string/commerce"/>

      <TextView
        android:id="@+id/menu_item_accounts"
        style="@style/MenuItem.Compound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/icon_accounts"
        android:text="@string/accounts"/>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
          android:id="@+id/menu_item_add_another_account"
          style="@style/MenuItem.Simple"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="17dp"
          android:text="@string/add_another_account"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@+id/menu_item_add_another_account"
          android:layout_alignParentTop="true"
          android:gravity="center"
          android:orientation="vertical">

          <TextView
            android:id="@+id/menu_item_profile"
            style="@style/MenuItem.Simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_profile"/>

          <TextView
            android:id="@+id/menu_item_preferences"
            style="@style/MenuItem.Simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preferences"/>

          <TextView
            android:id="@+id/menu_item_about"
            style="@style/MenuItem.Simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about"/>

          <TextView
            android:id="@+id/menu_item_help"
            style="@style/MenuItem.Simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help"/>
        </LinearLayout>
      </RelativeLayout>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

      <FrameLayout
        android:id="@+id/frame_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>
  </com.tpago.movil.ui.view.widget.SlidingPaneLayout>

  <FrameLayout
    android:id="@+id/frame_layout_full_screen_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</android.support.design.widget.CoordinatorLayout>