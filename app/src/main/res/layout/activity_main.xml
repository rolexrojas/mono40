<?xml version="1.0" encoding="utf-8"?>
<com.tpago.movil.dep.ui.view.widget.SlidingPaneLayout
  android:id="@+id/sliding_pane_layout"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:ignore="MissingPrefix">
  <include layout="@layout/include_menu"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
      style="@style/Dep.App.Widget.AppBar">
      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          style="@style/Dep.App.Widget.Toolbar"/>
        <LinearLayout
          android:id="@+id/linear_layout_delete"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:background="@color/primary"
          android:orientation="horizontal"
          android:visibility="gone">
          <ImageButton
            android:id="@+id/image_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_clear_white_24dp"/>
          <TextView
            fontPath="@string/font_gotham_rounded_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Eliminar destinatario"
            android:textColor="@color/white"
            android:textSize="16sp"/>
          <ImageButton
            android:id="@+id/image_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete_white_24dp"/>
        </LinearLayout>
      </FrameLayout>
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
  </LinearLayout>
</com.tpago.movil.dep.ui.view.widget.SlidingPaneLayout>
