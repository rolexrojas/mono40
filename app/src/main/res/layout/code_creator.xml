<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frame_layout_container"
        style="@style/Container.Dark.Primary">

    <LinearLayout
        android:id="@+id/linear_layout_container"
        style="@style/PinConfirmationContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            style="@style/LogoContainer">

            <ImageView
                style="@style/Logo"
                android:layout_gravity="center" />
        </FrameLayout>

        <Space style="@style/VerticalDivider.Space.Small" />

        <TextView
            android:id="@+id/titleTextView"
            style="@style/CodeCreatorTitle" />

        <Space style="@style/VerticalDivider.Space.Small" />

        <TextView
            android:id="@+id/subtitleTextView"
            style="@style/CodeCreatorSubtitle" />

        <Space style="@style/VerticalDivider.Space.Normal" />

        <!-- [START] Deprecated -->
        <com.mono40.movil.dep.widget.LabelFitterLayout
            style="@style/Widget.LabelFitterLayout"
            android:layout_marginStart="@dimen/space_horizontal_64"
            android:layout_marginEnd="@dimen/space_horizontal_64"
            app:maxTextSize="50sp">

            <com.mono40.movil.dep.widget.EditableLabel
                android:id="@+id/valueTextView"
                style="@style/Widget.EditableLabel.Dark"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.mono40.movil.dep.widget.LabelFitterLayout>
        <!-- [END] Deprecated -->

        <com.mono40.movil.app.ui.DNumPad
            android:id="@+id/num_pad"
            style="@style/DNumPad.Dark"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
    </FrameLayout>
</io.codetail.widget.RevealFrameLayout>