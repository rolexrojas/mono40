<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="PrefixableTextViewAppearance">
    <attr name="android:textSize"/>
    <attr name="android:textColor"/>
    <attr name="fontPath"/>
  </declare-styleable>
  <declare-styleable name="PrefixableTextView">
    <attr
      name="prefix"
      format="string|reference"/>
    <attr
      name="prefixTextAppearance"
      format="reference"/>
    <attr
      name="prefixTextSize"
      format="dimension|reference"/>
    <attr
      name="prefixTextColor"
      format="color|reference"/>
    <attr
      name="prefixFontPath"
      format="string|reference"/>
  </declare-styleable>
  <declare-styleable name="App.Theme">
    <attr
      name="prefixableTextViewStyle"
      format="reference"/>
    <attr
      name="searchViewStyle"
      format="reference"/>
  </declare-styleable>

  <!-- TODO: Apply standards from these point downward -->
  <declare-styleable name="SearchView">
    <attr
      name="hint"
      format="reference|string"/>
  </declare-styleable>
  <declare-styleable name="NumPad">
    <attr
      name="buttonColor"
      format="color"/>
    <attr
      name="deleteButtonDrawable"
      format="reference"/>
    <attr
      name="showDot"
      format="boolean"/>
  </declare-styleable>
</resources>