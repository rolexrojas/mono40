<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TODO: Remove every dimension from this point downwards -->
    <declare-styleable name="LabelPrefix">
        <attr name="prefixAppearance" format="reference" />
        <attr name="prefix" format="string|reference" />
        <attr name="valueAppearance" format="reference" />
        <attr name="value" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="StateErratic">
        <attr name="state_erratic" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NumPad">
        <attr name="dotButtonEnabled" format="boolean" />
        <attr name="textButtonTextColor" format="color|reference" />
        <attr name="deleteButtonImageSource" format="reference" />
    </declare-styleable>

    <declare-styleable name="DNumPad">
        <attr name="buttonTextColor" format="color|reference" />
        <attr name="dotButtonEnabled" />
        <attr name="deleteButtonDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="SettingsOption">
        <attr name="primaryText" format="string|reference" />
        <attr name="primaryTextColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="MultiLineSettingsOption">
        <attr name="secondaryText" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="AppTheme">
        <attr name="dividerStyle" format="reference" />
        <attr name="settingsSectionDividerStyle" format="reference" />
        <attr name="settingsOptionStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="LabelFitterLayout">
        <attr name="minTextSize" format="dimension|reference" />
        <attr name="maxTextSize" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="AmountText">
        <attr name="currencyContent" format="string|reference" />
        <attr name="currencyFontPath" format="string|reference" />
        <attr name="currencyTextColor" format="color|reference" />
        <attr name="currencyTextSize" format="dimension|reference" />
        <attr name="valueContent" format="string|reference" />
        <attr name="valueFontPath" format="string|reference" />
        <attr name="valueTextColor" format="color|reference" />
        <attr name="valueTextSize" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="App.Theme">
        <attr name="labelFitterLayoutStyle" format="reference" />

        <attr name="autoResizableLabelStyle" format="reference" />
        <attr name="textInputStyle" format="reference" />
        <attr name="amountTextViewStyle" format="reference" />
        <attr name="amountTextInputStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="DepPrefixableTextView">
        <attr name="content" format="string|reference" />
        <attr name="prefix" />
        <attr name="prefixTextColor" format="color|reference" />
        <attr name="prefixFontPath" format="string|reference" />
        <attr name="prefixTextSizeProportion" format="float|reference" />
        <attr name="prefixPaddingEnd" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="DepAutoResizeablePrefixableTextView">
        <attr name="maxTextSize" />
        <attr name="minTextSize" />
        <attr name="prefixMaxTextSize" format="dimension|reference" />
        <attr name="prefixMinTextSize" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="DepApp.Theme">
        <attr name="prefixableTextViewStyle" format="reference" />
        <attr name="autoResizeablePrefixableTextViewStyle" format="reference" />
        <attr name="searchViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="DepSearchView">
        <attr name="hint" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="QrTab">
        <attr name="isSelected" format="boolean" />
        <attr name="text" format="string" />
    </declare-styleable>
</resources>