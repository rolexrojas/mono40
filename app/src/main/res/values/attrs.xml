<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="PrefixableTextViewAppearance">
    <attr name="android:textSize"/>
    <attr name="android:textColor"/>
    <attr name="fontPath"/>
  </declare-styleable>
  <declare-styleable name="PrefixableTextView">
    <attr
      name="prefix"
      format="string|reference"/>
    <attr
      name="prefixTextAppearance"
      format="reference"/>
    <attr
      name="prefixTextSize"
      format="dimension|reference"/>
    <attr
      name="prefixTextColor"
      format="color|reference"/>
    <attr
      name="prefixFontPath"
      format="string|reference"/>
    <attr
      name="prefixPaddingEnd"
      format="dimension|reference"/>
  </declare-styleable>
  <declare-styleable name="AutoResizeablePrefixableTextView">
    <attr
      name="maxTextSize"
      format="dimension|reference"/>
    <attr
      name="minTextSize"
      format="dimension|reference"/>
    <attr
      name="prefixMaxTextSize"
      format="dimension|reference"/>
    <attr
      name="prefixMinTextSize"
      format="dimension|reference"/>
  </declare-styleable>
  <declare-styleable name="NumPad">
    <attr
      name="tintColor"
      format="color|reference"/>
    <attr
      name="dotEnabled"
      format="boolean"/>
    <attr
      name="deleteEnabled"
      format="boolean"/>
    <attr
      name="deleteDrawable"
      format="reference"/>
  </declare-styleable>

  <declare-styleable name="App.Theme">
    <attr
      name="prefixableTextViewStyle"
      format="reference"/>
    <attr
      name="autoResizeablePrefixableTextViewStyle"
      format="reference"/>
    <attr
      name="numPadStyle"
      format="reference"/>
    <attr
      name="searchViewStyle"
      format="reference"/>
  </declare-styleable>

  <!-- TODO: Apply standards from these point downward -->
  <declare-styleable name="SearchView">
    <attr
      name="hint"
      format="reference|string"/>
  </declare-styleable>
</resources>