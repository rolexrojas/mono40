<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Search view attributes -->
  <declare-styleable name="SearchView">
    <attr
      name="hint"
      format="reference|string"/>
  </declare-styleable>
  <!-- Amount view attributes -->
  <declare-styleable name="AmountView">
    <attr
      name="currency"
      format="string"/>
    <attr
      name="value"
      format="float"/>
  </declare-styleable>
  <!-- Num pad attributes -->
  <declare-styleable name="NumPad">
    <attr
      name="buttonColor"
      format="color"/>
    <attr
      name="deleteButtonDrawable"
      format="reference"/>
    <attr
      name="showDot"
      format="boolean"/>
  </declare-styleable>
  <!-- App theme attributes -->
  <declare-styleable name="AppTheme">
    <attr
      name="searchViewStyle"
      format="reference"/>
    <attr
      name="amountViewStyle"
      format="reference"/>
  </declare-styleable>
</resources>