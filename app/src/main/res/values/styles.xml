    <item name="android:ellipsize">end</item>
    <item name="android:textAppearance">@style/App.Text.CommercePaymentOptionProductOwnerName</item>
  </style>

  <style name="Base.Widget.CommercePaymentOptionReady">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:text">@string/commerce_payment_option_ready_text_value</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textAppearance">@style/App.Text.CommercePaymentOption.Ready</item>
  </style>

