    <item name="android:background">@drawable/purchase_payment_indicator_background</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_height">@dimen/commerce_payment_indicator_default_height</item>
    <item name="android:layout_marginTop">@dimen/commerce_payment_indicator_default_margin_top
    </item>
    <item name="android:layout_width">@dimen/commerce_payment_indicator_default_width</item>
  </style>

  <style name="Base.Widget.CommercePaymentMessage">
    <item name="android:gravity">center</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">
      @dimen/commerce_payment_message_default_margin_horizontal
    </item>
    <item name="android:layout_marginStart">
      @dimen/commerce_payment_message_default_margin_horizontal
    </item>
    <item name="android:layout_marginTop">@dimen/commerce_payment_message_default_margin_top</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textAppearance">@style/App.Text.CommercePaymentMessage</item>
  </style>

