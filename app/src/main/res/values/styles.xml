<resources>
  <!-- Text appearances -->
  <style
    name="BaseText"
    parent="TextAppearance.AppCompat"/>
  <style name="BaseText.Label">
    <item name="android:textColor">#333</item>
  </style>
  <style name="BaseText.Label.Light">
    <item name="android:textSize">12sp</item>
    <item name="fontPath">fonts/GothamRounded-Light.otf</item>
  </style>
  <style name="BaseText.Label.Medium">
    <item name="android:textSize">16sp</item>
    <item name="fontPath">fonts/GothamRounded-Medium.otf</item>
  </style>
  <style name="BaseText.Label.Bold">
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:textSize">14sp</item>
    <item name="fontPath">fonts/GothamRounded-Bold.otf</item>
  </style>
  <style name="BaseText.Body">
    <item name="android:textColor">#333</item>
    <item name="fontPath">fonts/GothamRounded-Book.otf</item>
  </style>
  <style name="BaseText.Body.Normal">
    <item name="android:textSize">16sp</item>
  </style>

  <style
    name="Text.Label.Light"
    parent="BaseText.Label.Light"/>
  <style
    name="Text.Label.Medium"
    parent="BaseText.Label.Medium"/>
  <style
    name="Text.Label.Bold"
    parent="BaseText.Label.Bold"/>
  <style
    name="Text.Body.Normal"
    parent="BaseText.Body.Normal"/>

  <!-- Button styles -->
  <style name="Button">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:textAppearance">@style/Text.Label.Bold</item>
  </style>
  <style name="ListItemButton"
    parent="Button">
    <item name="android:background">@drawable/bg_button_colored</item>
    <item name="android:layout_height">@dimen/list_item_button_height</item>
    <item name="android:layout_width">@dimen/list_item_button_width</item>
  </style>

  <!-- Menu styles -->
  <style name="BaseMenuItem">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="BaseMenuItem.Small">
    <item name="android:paddingBottom">6dp</item>
    <item name="android:paddingStart">27dp</item>
    <item name="android:paddingTop">6dp</item>
    <item name="android:textSize">12sp</item>
    <item name="fontPath">fonts/GothamRounded-Book.otf</item>
  </style>
  <style name="BaseMenuItem.Normal">
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingStart">27dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textSize">15sp</item>
    <item name="fontPath">fonts/GothamRounded-Book.otf</item>
  </style>
  <style name="BaseMenuItem.Large">
    <item name="android:drawablePadding">10dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingStart">19dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">15sp</item>
    <item name="fontPath">fonts/GothamRounded-Medium.otf</item>
  </style>

  <style name="Menu">
    <item name="android:background">@color/primary</item>
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
  </style>

  <style name="MenuHeader">
    <item name="android:layout_height">?attr/actionBarSize</item>
  </style>

  <style
    name="MenuItem"
    parent="BaseMenuItem"/>
  <style
    name="MenuItem.Small"
    parent="BaseMenuItem.Small"/>
  <style
    name="MenuItem.Normal"
    parent="BaseMenuItem.Normal"/>
  <style name="MenuItem.Large"
    parent="BaseMenuItem.Large"/>

  <!-- List styles -->
  <style name="List"/>
  <style name="List.Vertical">
    <item name="android:clipToPadding">false</item>
    <item name="android:paddingTop">8dp</item>
  </style>

  <style name="ListItem">
    <item name="android:background">@color/white</item>
    <item name="android:paddingEnd">@dimen/list_item_padding_horizontal</item>
    <item name="android:paddingStart">@dimen/list_item_padding_horizontal</item>
  </style>
  <style name="ListItem.Medium">
    <item name="android:layout_height">@dimen/list_item_height_medium</item>
  </style>
  <style name="ListItem.Large">
    <item name="android:layout_height">@dimen/list_item_height_large</item>
  </style>

  <!-- Themes -->
  <style
    name="AppTheme"
    parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>

  <style
    name="ToolbarTheme"
    parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:background">@color/primary</item>
    <item name="fontPath">fonts/GothamRounded-Book.otf</item>
  </style>
</resources>
