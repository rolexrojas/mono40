    <item name="colorPrimaryDark">#AC78A7</item>
    <item name="android:windowBackground">@color/white_alpha_50</item>
  </style>

  <!-- Styles of the auth index screen -->
  <style name="AuthIndex"/>
  <style name="AuthIndex.Widget"/>
  <style name="AuthIndex.Widget.Label">
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center_horizontal</item>
  </style>
  <style name="AuthIndex.Widget.Label.Primary">
    <item name="android:textSize">20sp</item>
    <item name="fontPath">@string/font_gotham_rounded_medium</item>
  </style>
  <style name="AuthIndex.Widget.Label.Secondary">
    <item name="android:lineSpacingExtra">5sp</item>
    <item name="android:textSize">15sp</item>
    <item name="fontPath">@string/font_gotham_rounded_book</item>
  </style>
  <style name="Screen.AuthIndex.Widget.Button"
    parent="App.Widget.Button.Colored.Rounded"/>

