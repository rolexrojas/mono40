<resources>
  <style name="Base"/>
  <style
    name="Base.Text"
    parent="TextAppearance.AppCompat"/>
  <style name="Base.Text.Label">
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:textSize">14sp</item>
    <item name="fontPath">@string/font.gotham_rounded.bold</item>
  </style>
  <style name="Base.Text.Widget"/>
  <style
    name="Base.Text.Widget.Button"
    parent="Base.Text.Label"/>
  <style name="Base.Text.Widget.Toolbar">
    <item name="android:textColor">@color/white</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style name="Base.Text.Widget.Toolbar.Title">
    <item name="android:textSize">16sp</item>
  </style>
  <style name="Base.Text.Widget.Toolbar.Subtitle">
    <item name="android:textSize">10sp</item>
  </style>
  <style
    name="Base.Widget"
    parent="android:Widget"/>
  <style
    name="Base.Widget.Button"
    parent="Widget.AppCompat.Button">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">@dimen/widget.button.height</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textAppearance">@style/App.Text.Widget.Button</item>
  </style>
  <style name="Base.Widget.Button.Blurred">
    <item name="android:background">@drawable/app_widget_button_blurred_shape</item>
  </style>
  <style
    name="Base.Widget.Toolbar"
    parent="Widget.AppCompat.Toolbar">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="subtitleTextAppearance">@style/App.Text.Widget.Toolbar.Subtitle</item>
    <item name="titleTextAppearance">@style/App.Text.Widget.Toolbar.Title</item>
  </style>
  <style
    name="Base.Widget.AppBar"
    parent="Widget.Design.AppBarLayout">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:theme">@style/App.Theme.AppBar</item>
  </style>
  <style name="Base.Widget.Container">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <style name="Base.Widget.Container.Colored">
    <item name="android:background">@drawable/background_colored</item>
  </style>

  <style
    name="Base.Theme"
    parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@color/background</item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="android:buttonStyle">@style/App.Widget.Button</item>
    <item name="searchViewStyle">@style/App.Widget.SearchView</item>
    <item name="amountViewStyle">@style/App.Widget.AmountView</item>
  </style>
  <style
    name="Base.Theme.AppBar"
    parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
  </style>

  <style
    name="App"
    parent="Base"/>
  <style
    name="App.Text"
    parent="Base.Text"/>
  <style
    name="App.Text.Label"
    parent="Base.Text.Label"/>
  <style
    name="App.Text.Widget"
    parent="Base.Text.Widget"/>
  <style
    name="App.Text.Widget.Button"
    parent="Base.Text.Widget.Button"/>
  <style
    name="App.Text.Widget.Toolbar"
    parent="Base.Text.Widget.Toolbar"/>
  <style
    name="App.Text.Widget.Toolbar.Title"
    parent="Base.Text.Widget.Toolbar.Title"/>
  <style
    name="App.Text.Widget.Toolbar.Subtitle"
    parent="Base.Text.Widget.Toolbar.Subtitle"/>
  <style
    name="App.Widget"
    parent="Base.Widget"/>
  <style
    name="App.Widget.Button"
    parent="Base.Widget.Button"/>
  <style
    name="App.Widget.Button.Blurred"
    parent="Base.Widget.Button.Blurred"/>
  <style
    name="App.Widget.Toolbar"
    parent="Base.Widget.Toolbar"/>
  <style
    name="App.Widget.AppBar"
    parent="Base.Widget.AppBar"/>
  <style
    name="App.Widget.Container"
    parent="Base.Widget.Container"/>
  <style
    name="App.Widget.Container.Colored"
    parent="Base.Widget.Container.Colored"/>

  <style
    name="App.Theme"
    parent="Base.Theme"/>
  <style
    name="App.Theme.AppBar"
    parent="Base.Theme.AppBar"/>

  <!-- TODO -->
  <style
    name="BaseAppTabText"
    parent="TextAppearance.Design.Tab">
    <item name="android:textColor">#666</item>
    <item name="android:textSize">10sp</item>
    <item name="fontPath">@string/font.gotham_rounded.bold</item>
  </style>
  <style
    name="AppTabText"
    parent="BaseAppTabText"/>
  <style
    name="AppTabLayout"
    parent="Widget.Design.TabLayout">
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="tabIndicatorColor">#666</item>
    <item name="tabIndicatorHeight">2dp</item>
    <item name="tabPaddingEnd">0dp</item>
    <item name="tabPaddingStart">0dp</item>
    <item name="tabSelectedTextColor">#666</item>
    <item name="tabTextAppearance">@style/AppTabText</item>
    <item name="tabTextColor">#666</item>
  </style>

  <style
    name="RecipientText"
    parent="TextAppearance.AppCompat">
    <item name="android:textColor">#333</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style
    name="RecipientLabelText"
    parent="RecipientText">
    <item name="android:textSize">16sp</item>
  </style>
  <style name="RecipientLabelText.Medium">
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <style
    name="BaseRecipientExtraText"
    parent="RecipientText">
    <item name="android:textSize">10sp</item>
  </style>
  <style
    name="RecipientExtraText"
    parent="BaseRecipientExtraText"/>

  <style name="App.Text.Contact">
    <item name="android:textColor">#333</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style name="App.Text.Contact.Name">
    <item name="android:ellipsize">end</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style name="App.Text.Contact.BasePhoneNumber">
    <item name="android:textSize">10sp</item>
  </style>
  <style
    name="Text.Contact.PhoneNumber"
    parent="App.Text.Contact.BasePhoneNumber"/>

  <!-- Search view styles -->
  <style name="App.Text.Widget.SearchView"/>
  <style name="App.Text.Widget.SearchView.Query">
    <item name="android:textColor">@color/search_view_text</item>
    <item name="android:textColorHint">@color/search_view_hint</item>
    <item name="android:textSize">16sp</item>
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <style name="App.Widget.SearchView"/>
  <style name="App.Widget.SearchViewQuery">
    <item name="android:background">@null</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:textAppearance">@style/App.Text.Widget.SearchView.Query</item>
  </style>
  <!-- List styles -->
  <style name="List">
    <item name="android:background">@color/white</item>
  </style>
  <style name="List.Vertical"/>
  <style name="ListItem">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:paddingEnd">@dimen/list.item.inset.horizontal</item>
    <item name="android:paddingStart">@dimen/list.item.inset.horizontal</item>
  </style>
  <style name="ListItem.Normal">
    <item name="android:layout_height">@dimen/list.item.height.normal</item>
  </style>
  <style name="ListItem.Large">
    <item name="android:layout_height">@dimen/list.item.height.large</item>
  </style>
  <!-- Menu styles -->
  <style name="BaseMenuItem">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="BaseMenuItem.Small">
    <item name="android:paddingBottom">6dp</item>
    <item name="android:paddingStart">27dp</item>
    <item name="android:paddingTop">6dp</item>
    <item name="android:textSize">12sp</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style name="BaseMenuItem.Normal">
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingStart">27dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textSize">15sp</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style name="BaseMenuItem.Large">
    <item name="android:drawablePadding">10dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingStart">19dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">15sp</item>
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <style name="Menu">
    <item name="android:background">@color/background_menu</item>
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
  </style>
  <style name="MenuHeader">
    <item name="android:layout_height">?attr/actionBarSize</item>
  </style>
  <style
    name="MenuItem"
    parent="BaseMenuItem"/>
  <style
    name="MenuItem.Small"
    parent="BaseMenuItem.Small"/>
  <style
    name="MenuItem.Normal"
    parent="BaseMenuItem.Normal"/>
  <style
    name="MenuItem.Large"
    parent="BaseMenuItem.Large"/>
  <!-- Amount view styles -->
  <style name="App.Text.Widget.AmountView">
    <item name="android:textColor">#333</item>
  </style>
  <style name="App.Text.Widget.AmountView.Currency">
    <item name="android:textSize">10sp</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style name="App.Text.Widget.AmountView.Value">
    <item name="android:textSize">16sp</item>
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <style name="App.Widget.AmountView"/>
  <style name="App.Widget.AmountViewCurrency">
    <item name="android:alpha">0.5</item>
    <item name="android:textAppearance">@style/App.Text.Widget.AmountView.Currency</item>
  </style>
  <style name="App.Widget.AmountViewValue">
    <item name="android:textAppearance">@style/App.Text.Widget.AmountView.Value</item>
  </style>
  <!-- Num pad styles -->
  <style name="NumPad">
    <item name="android:paddingBottom">@dimen/num_pad_padding_vertical</item>
    <item name="android:paddingEnd">@dimen/num_pad_padding_horizontal</item>
    <item name="android:paddingStart">@dimen/num_pad_padding_horizontal</item>
    <item name="android:paddingTop">@dimen/num_pad_padding_vertical</item>
  </style>
  <style name="NumPad.Light">
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    <item name="buttonColor">@color/white</item>
    <item name="deleteButtonDrawable">@drawable/ic_backspace_white_24dp</item>
  </style>
  <style name="NumPad.Dark">
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="buttonColor">@color/black</item>
    <item name="deleteButtonDrawable">@drawable/ic_backspace_black_24dp</item>
  </style>
  <style name="NumPadRow">
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:orientation">horizontal</item>
  </style>
  <style name="NumPadCell">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dp</item>
  </style>
  <style
    name="NumPadButton"
    parent="NumPadCell">
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:clickable">true</item>
  </style>
  <style name="NumPadButton.Text">
    <item name="android:gravity">center</item>
    <item name="android:lineSpacingExtra">2sp</item>
    <item name="android:textSize">24sp</item>
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <!-- Pin confirmation styles -->
  <style name="PinConfirmationContainer">
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
  </style>
  <style name="PinConfirmationTitle">
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">20sp</item>
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <style name="PinConfirmationDescription">
    <item name="android:gravity">center</item>
    <item name="android:textColor">#CCC</item>
    <item name="android:textSize">15sp</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <!-- Accounts screen styles -->
  <style
    name="ListItemAccount"
    parent="ListItem.Large"/>
  <style name="ListItemAccountText">
    <item name="android:textColor">#333</item>
  </style>
  <style
    name="BaseListItemAccountAlias"
    parent="ListItemAccountText">
    <item name="android:textSize">12sp</item>
    <item name="fontPath">@string/font.gotham_rounded.light</item>
  </style>
  <style
    name="ListItemAccountAlias"
    parent="BaseListItemAccountAlias"/>
  <style
    name="ListItemAccountBankName"
    parent="ListItemAccountText">
    <item name="android:ellipsize">end</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">16sp</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <!-- Recent transactions screen styles -->
  <style name="BaseListItemGroupTitle">
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_height">35dp</item>
    <item name="android:paddingEnd">@dimen/list.item.inset.horizontal</item>
    <item name="android:paddingStart">@dimen/list.item.inset.horizontal</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">#666</item>
    <item name="android:textSize">10sp</item>
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <style
    name="ListItemGroupTitle"
    parent="BaseListItemGroupTitle"/>
  <style
    name="ListItemTransaction"
    parent="ListItem.Normal"/>
  <style name="ListItemTransactionText">
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">@color/black</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style
    name="ListItemTransactionName"
    parent="ListItemTransactionText">
    <item name="android:gravity">bottom</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style
    name="BaseListItemTransactionType"
    parent="ListItemTransactionText">
    <item name="android:gravity">top</item>
    <item name="android:textSize">10sp</item>
  </style>
  <style
    name="ListItemTransactionType"
    parent="BaseListItemTransactionType"/>
  <!-- Add another account styles -->
  <style
    name="ListItemInstruction"
    parent="ListItem.Large"/>
  <style name="ListItemInstructionText">
    <item name="android:textColor">#333</item>
  </style>
  <style
    name="BaseListItemInstructionIndex"
    parent="ListItemInstructionText">
    <item name="android:textSize">12sp</item>
    <item name="fontPath">@string/font.gotham_rounded.light</item>
  </style>
  <style
    name="ListItemInstructionIndex"
    parent="BaseListItemInstructionIndex"/>
  <style
    name="ListItemInstructionContent"
    parent="ListItemInstructionText">
    <item name="android:lineSpacingExtra">2sp</item>
    <item name="android:textSize">16sp</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <!-- Payments styles -->
  <style
    name="RecipientListItem"
    parent="ListItem.Normal"/>
  <!-- Themes -->

  <!-- [START] List styles -->
  <style
    name="ListItemButton"
    parent="App.Widget.Button">
    <item name="android:background">@drawable/item_button</item>
    <item name="android:layout_height">@dimen/list.item.button.height</item>
    <item name="android:layout_width">@dimen/list.item.button.width</item>
  </style>
  <style
    name="NoResultsListItem"
    parent="ListItem.Normal"/>
  <style
    name="NoResultsListItemText"
    parent="App.Text">
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">#666</item>
    <item name="android:textSize">16sp</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style name="NoResultsListItemQuery">
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textAppearance">@style/NoResultsListItemText</item>
  </style>
  <!-- [END] List styles -->
  <!-- [START] Bank styles -->
  <style
    name="BankNameText"
    parent="App.Text">
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColor">#333</item>
    <item name="android:textSize">16sp</item>
    <item name="fontPath">@string/font.gotham_rounded.bold</item>
  </style>
  <!-- [END] Bank styles -->
  <!-- [START] Product styles -->
  <style
    name="BaseProductAliasText"
    parent="App.Text">
    <item name="android:textColor">#333</item>
    <item name="android:textSize">12sp</item>
    <item name="fontPath">@string/font.gotham_rounded.light</item>
  </style>
  <style
    name="ProductAliasText"
    parent="BaseProductAliasText"/>
  <!-- [END] Product styles -->
  <!-- [START] Recipient styles -->
  <!-- [END] Contact styles -->
</resources>
