    <item name="android:ellipsize">end</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textAppearance">@style/App.Text.CommercePaymentOption.ProductIdentifier
    </item>
  </style>

  <style name="Base.Widget.CommercePaymentOptionProductNumber">
    <item name="android:ellipsize">end</item>
    <item name="android:textAppearance">@style/App.Text.CommercePaymentOption.ProductNumber</item>
