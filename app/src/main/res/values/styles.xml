    parent="App.Widget.Button.Colored"/>
  <style name="SignIn.Widget.EditText"
    parent="App.Widget.EditText">
    <item name="android:maxLines">1</item>
  </style>
  <style name="SignIn.Widget.Label">
    <item name="android:lineSpacingExtra">5sp</item>
    <item name="android:textColor">@color/white_alpha_50</item>
    <item name="android:textSize">15sp</item>
    <item name="fontPath">@string/font_gotham_rounded_book</item>
  </style>

