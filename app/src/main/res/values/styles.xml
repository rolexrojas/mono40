<resources>
  <!-- Base styles -->
  <style name="Base"/>

  <style
    name="Base.Text"
    parent="TextAppearance.AppCompat"/>
  <style name="Base.Text.Label">
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:textSize">14sp</item>
    <item name="fontPath">@string/font.gotham_rounded.bold</item>
  </style>
  <style name="Base.Text.Widget"/>
  <style
    name="Base.Text.Widget.Button"
    parent="Base.Text.Label"/>
  <style name="Base.Text.Widget.Toolbar">
    <item name="android:textColor">@color/white</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style name="Base.Text.Widget.Toolbar.Title">
    <item name="android:textSize">16sp</item>
  </style>
  <style name="Base.Text.Widget.Toolbar.Subtitle">
    <item name="android:textSize">10sp</item>
  </style>
  <style name="Base.Text.Widget.PrefixableTextView">
    <item name="fontPath">@string/app_text_widget_prefixable_text_view_font</item>
  </style>
  <style name="Base.Text.Widget.PrefixableTextView.Content">
    <item name="android:textColor">@color/app_text_widget_prefixable_text_view_content</item>
    <item name="android:textSize">@dimen/app_text_widget_prefixable_text_view_content</item>
  </style>
  <style name="Base.Text.Widget.PrefixableTextView.Prefix">
    <item name="android:textColor">@color/app_text_widget_prefixable_text_view_prefix</item>
    <item name="android:textSize">@dimen/app_text_widget_prefixable_text_view_prefix_size</item>
  </style>
  <style name="Base.Text.Widget.NumPadCell">
    <item name="android:textColor">@color/app_widget_num_pad_tint</item>
    <item name="android:textSize">@dimen/app_text_widget_num_pad_cell_size</item>
    <item name="fontPath">@string/app_text_widget_num_pad_cell_font</item>
  </style>

  <style name="Base.Text.Bank"/>
  <style name="Base.Text.Bank.Name">
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColor">#333</item>
    <item name="android:textSize">16sp</item>
    <item name="fontPath">@string/font.gotham_rounded.bold</item>
  </style>

  <style
    name="Base.Widget"
    parent="android:Widget"/>
  <style
    name="Base.Widget.Toolbar"
    parent="Widget.AppCompat.Toolbar">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="subtitleTextAppearance">@style/App.Text.Widget.Toolbar.Subtitle</item>
    <item name="titleTextAppearance">@style/App.Text.Widget.Toolbar.Title</item>
  </style>
  <style
    name="Base.Widget.AppBar"
    parent="Widget.Design.AppBarLayout">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:theme">@style/App.Theme.AppBar</item>
  </style>
  <style name="Base.Widget.Container">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <style name="Base.Widget.Container.Colored">
    <item name="android:background">@drawable/background_colored</item>
  </style>
  <style name="Base.Widget.Button">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">@dimen/app_widget_button_height</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textAppearance">@style/App.Text.Widget.Button</item>
  </style>
  <style name="Base.Widget.Button.Blurred">
    <item name="android:background">@drawable/app_widget_button_blurred_shape</item>
  </style>
  <style name="Base.Widget.PrefixableTextView">
    <item name="android:maxLines">1</item>
    <item name="android:textAppearance">@style/App.Text.Widget.PrefixableTextView.Content</item>
    <item name="prefixTextAppearance">@style/App.Text.Widget.PrefixableTextView.Prefix</item>
  </style>
  <style
    name="Base.Widget.AutoResizeablePrefixableTextView"
    parent="App.Widget.PrefixableTextView">
    <item name="maxTextSize">@dimen/app_text_widget_auto_resizeable_prefixable_text_view_content_max</item>
    <item name="minTextSize">@dimen/app_text_widget_auto_resizeable_prefixable_text_view_content_min</item>
    <item name="prefixMaxTextSize">@dimen/app_text_widget_auto_resizeable_prefixable_text_view_prefix_max</item>
    <item name="prefixMinTextSize">@dimen/app_text_widget_auto_resizeable_prefixable_text_view_prefix_min</item>
  </style>
  <style name="Base.Widget.NumPadRow">
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:orientation">horizontal</item>
  </style>
  <style name="Base.Widget.NumPadCell">
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dp</item>
  </style>
  <style name="Base.Widget.NumPadCell.Text">
    <item name="android:lineSpacingExtra">@dimen/app_text_widget_num_pad_cell_line_spacing</item>
    <item name="android:textAppearance">@style/App.Text.Widget.NumPadCell</item>
  </style>
  <style name="Base.Widget.NumPadCell.Image"/>
  <style name="Base.Widget.NumPad">
    <item name="tintColor">@color/app_widget_num_pad_tint</item>
    <item name="dotEnabled">false</item>
    <item name="deleteEnabled">true</item>
    <item name="deleteDrawable">@drawable/app_widget_num_pad_delete</item>
  </style>

  <style
    name="Base.Theme"
    parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@color/background</item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="android:buttonStyle">@style/App.Widget.Button</item>
    <item name="prefixableTextViewStyle">@style/App.Widget.PrefixableTextView</item>
    <item name="autoResizeablePrefixableTextViewStyle">@style/App.Widget.AutoResizeablePrefixableTextView</item>
    <item name="numPadStyle">@style/App.Widget.NumPad</item>
    <item name="searchViewStyle">@style/App.Widget.SearchView</item>
  </style>
  <style
    name="Base.Theme.AppBar"
    parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
  </style>

  <!-- App's styles -->
  <style
    name="App"
    parent="Base"/>

  <style
    name="App.Text"
    parent="Base.Text"/>
  <style
    name="App.Text.Label"
    parent="Base.Text.Label"/>
  <style
    name="App.Text.Widget"
    parent="Base.Text.Widget"/>
  <style
    name="App.Text.Widget.Button"
    parent="Base.Text.Widget.Button"/>
  <style
    name="App.Text.Widget.Toolbar"
    parent="Base.Text.Widget.Toolbar"/>
  <style
    name="App.Text.Widget.Toolbar.Title"
    parent="Base.Text.Widget.Toolbar.Title"/>
  <style
    name="App.Text.Widget.Toolbar.Subtitle"
    parent="Base.Text.Widget.Toolbar.Subtitle"/>
  <style
    name="App.Text.Widget.PrefixableTextView"
    parent="Base.Text.Widget.PrefixableTextView"/>
  <style
    name="App.Text.Widget.PrefixableTextView.Content"
    parent="Base.Text.Widget.PrefixableTextView.Content"/>
  <style
    name="App.Text.Widget.PrefixableTextView.Prefix"
    parent="Base.Text.Widget.PrefixableTextView.Prefix"/>
  <style
    name="App.Text.Widget.NumPadCell"
    parent="Base.Text.Widget.NumPadCell"/>

  <style
    name="App.Text.Bank"
    parent="Base.Text.Bank"/>
  <style
    name="App.Text.Bank.Name"
    parent="Base.Text.Bank.Name"/>

  <style
    name="App.Widget"
    parent="Base.Widget"/>
  <style
    name="App.Widget.Button"
    parent="Base.Widget.Button"/>
  <style
    name="App.Widget.Button.Blurred"
    parent="Base.Widget.Button.Blurred"/>
  <style
    name="App.Widget.Toolbar"
    parent="Base.Widget.Toolbar"/>
  <style
    name="App.Widget.AppBar"
    parent="Base.Widget.AppBar"/>
  <style
    name="App.Widget.Container"
    parent="Base.Widget.Container"/>
  <style
    name="App.Widget.Container.Colored"
    parent="Base.Widget.Container.Colored"/>
  <style
    name="App.Widget.PrefixableTextView"
    parent="Base.Widget.PrefixableTextView"/>
  <style
    name="App.Widget.AutoResizeablePrefixableTextView"
    parent="Base.Widget.AutoResizeablePrefixableTextView"/>
  <style
    name="App.Widget.NumPadRow"
    parent="Base.Widget.NumPadRow"/>
  <style
    name="App.Widget.NumPadCell"
    parent="Base.Widget.NumPadCell"/>
  <style
    name="App.Widget.NumPadCell.Text"
    parent="Base.Widget.NumPadCell.Text"/>
  <style
    name="App.Widget.NumPadCell.Image"
    parent="Base.Widget.NumPadCell.Image"/>
  <style
    name="App.Widget.NumPad"
    parent="Base.Widget.NumPad"/>

  <style
    name="App.Theme"
    parent="Base.Theme"/>
  <style
    name="App.Theme.AppBar"
    parent="Base.Theme.AppBar"/>

  <!-- Screen's styles -->
  <style name="Screen"/>
  <style name="Screen.Products"/>
  <style
    name="Screen.Products.Text.Widget.Amount.Content"
    parent="App.Text.Widget.PrefixableTextView.Content">
    <item name="fontPath">@string/screen_products_text_widget_amount_value_font</item>
  </style>
  <style
    name="Screen.Products.Widget.Amount"
    parent="App.Widget.PrefixableTextView">
    <item name="android:textAppearance">@style/Screen.Products.Text.Widget.Amount.Content</item>
  </style>

  <!-- TODO: Apply standards from these point downward -->
  <style name="TransactionCreation"/>

  <style name="TransactionCreation.Text"/>
  <style name="TransactionCreation.Text.Widget"/>
  <style
    name="TransactionCreation.Text.Widget.Amount"
    parent="App.Text.Widget.PrefixableTextView"/>
  <style
    name="TransactionCreation.Text.Widget.Amount.Value"
    parent="App.Text.Widget.PrefixableTextView.Content">
    <item name="android:textColor">@color/transaction_creation_text_widget_amount_value</item>
    <item name="android:textSize">@dimen/transaction_creation_text_widget_amount_value_max</item>
    <item name="fontPath">@string/transaction_creation.text.widget.amount.value.font</item>
  </style>
  <style
    name="TransactionCreation.Text.Widget.Amount.Currency"
    parent="App.Text.Widget.PrefixableTextView.Prefix">
    <item name="android:textColor">@color/transaction_creation_text_widget_amount_prefix</item>
    <item name="android:textSize">@dimen/transaction_creation_text_widget_amount_currency_max</item>
    <item name="fontPath">@string/transaction_creation.text.widget.amount.currency.font</item>
  </style>

  <style name="TransactionCreation.Widget"/>
  <style
    name="TransactionCreation.Widget.Amount"
    parent="App.Widget.AutoResizeablePrefixableTextView">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textAppearance">@style/TransactionCreation.Text.Widget.Amount.Value</item>
    <item name="maxTextSize">@dimen/transaction_creation_text_widget_amount_value_max</item>
    <item name="minTextSize">@dimen/transaction_creation_text_widget_amount_value_min</item>
    <item name="prefixMaxTextSize">@dimen/transaction_creation_text_widget_amount_currency_max</item>
    <item name="prefixMinTextSize">@dimen/transaction_creation_text_widget_amount_currency_min</item>
    <item name="prefixTextAppearance">@style/TransactionCreation.Text.Widget.Amount.Currency</item>
  </style>

  <style
    name="BaseAppTabText"
    parent="TextAppearance.Design.Tab">
    <item name="android:textColor">#666</item>
    <item name="android:textSize">10sp</item>
    <item name="fontPath">@string/font.gotham_rounded.bold</item>
  </style>
  <style
    name="AppTabText"
    parent="BaseAppTabText"/>
  <style
    name="AppTabLayout"
    parent="Widget.Design.TabLayout">
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="tabIndicatorColor">#666</item>
    <item name="tabIndicatorHeight">2dp</item>
    <item name="tabPaddingEnd">0dp</item>
    <item name="tabPaddingStart">0dp</item>
    <item name="tabSelectedTextColor">#666</item>
    <item name="tabTextAppearance">@style/AppTabText</item>
    <item name="tabTextColor">#666</item>
  </style>

  <style
    name="RecipientText"
    parent="TextAppearance.AppCompat">
    <item name="android:textColor">#333</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style
    name="RecipientLabelText"
    parent="RecipientText">
    <item name="android:textSize">16sp</item>
  </style>
  <style name="RecipientLabelText.Medium">
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <style
    name="BaseRecipientExtraText"
    parent="RecipientText">
    <item name="android:textSize">10sp</item>
  </style>
  <style
    name="RecipientExtraText"
    parent="BaseRecipientExtraText"/>

  <style name="App.Text.Contact">
    <item name="android:textColor">#333</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style name="App.Text.Contact.Name">
    <item name="android:ellipsize">end</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style name="App.Text.Contact.BasePhoneNumber">
    <item name="android:textSize">10sp</item>
  </style>
  <style
    name="Text.Contact.PhoneNumber"
    parent="App.Text.Contact.BasePhoneNumber"/>

  <!-- Search view styles -->
  <style name="App.Text.Widget.SearchView"/>
  <style name="App.Text.Widget.SearchView.Query">
    <item name="android:textColor">@color/search_view_text</item>
    <item name="android:textColorHint">@color/search_view_hint</item>
    <item name="android:textSize">16sp</item>
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <style name="App.Widget.SearchView"/>
  <style name="App.Widget.SearchViewQuery">
    <item name="android:background">@null</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:textAppearance">@style/App.Text.Widget.SearchView.Query</item>
  </style>
  <!-- List styles -->
  <style name="List">
    <item name="android:background">@color/white</item>
  </style>
  <style name="List.Vertical"/>
  <style name="ListItem">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:paddingEnd">@dimen/space.horizontal.normal</item>
    <item name="android:paddingStart">@dimen/space.horizontal.normal</item>
  </style>
  <style name="ListItem.Normal">
    <item name="android:layout_height">@dimen/list.item.height.normal</item>
  </style>
  <style name="ListItem.Large">
    <item name="android:layout_height">@dimen/list.item.height.large</item>
  </style>
  <!-- Menu styles -->
  <style name="BaseMenuItem">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="BaseMenuItem.Small">
    <item name="android:paddingBottom">6dp</item>
    <item name="android:paddingStart">27dp</item>
    <item name="android:paddingTop">6dp</item>
    <item name="android:textSize">12sp</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style name="BaseMenuItem.Normal">
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingStart">27dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textSize">15sp</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style name="BaseMenuItem.Large">
    <item name="android:drawablePadding">10dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingStart">19dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">15sp</item>
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <style name="Menu">
    <item name="android:background">@color/background_menu</item>
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
  </style>
  <style name="MenuHeader">
    <item name="android:layout_height">?attr/actionBarSize</item>
  </style>
  <style
    name="MenuItem"
    parent="BaseMenuItem"/>
  <style
    name="MenuItem.Small"
    parent="BaseMenuItem.Small"/>
  <style
    name="MenuItem.Normal"
    parent="BaseMenuItem.Normal"/>
  <style
    name="MenuItem.Large"
    parent="BaseMenuItem.Large"/>
  <!-- Pin confirmation styles -->
  <style name="PinConfirmationContainer">
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
  </style>
  <style name="PinConfirmationTitle">
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">20sp</item>
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <style name="PinConfirmationDescription">
    <item name="android:gravity">center</item>
    <item name="android:textColor">#CCC</item>
    <item name="android:textSize">15sp</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <!-- Accounts screen styles -->
  <style
    name="ListItemAccount"
    parent="ListItem.Large"/>
  <style name="ListItemAccountText">
    <item name="android:textColor">#333</item>
  </style>
  <style
    name="BaseListItemAccountAlias"
    parent="ListItemAccountText">
    <item name="android:textSize">12sp</item>
    <item name="fontPath">@string/font.gotham_rounded.light</item>
  </style>
  <style
    name="ListItemAccountAlias"
    parent="BaseListItemAccountAlias"/>
  <style
    name="ListItemAccountBankName"
    parent="ListItemAccountText">
    <item name="android:ellipsize">end</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">16sp</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <!-- Recent transactions screen styles -->
  <style name="BaseListItemGroupTitle">
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_height">35dp</item>
    <item name="android:paddingEnd">@dimen/space.horizontal.normal</item>
    <item name="android:paddingStart">@dimen/space.horizontal.normal</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">#666</item>
    <item name="android:textSize">10sp</item>
    <item name="fontPath">@string/font.gotham_rounded.medium</item>
  </style>
  <style
    name="ListItemGroupTitle"
    parent="BaseListItemGroupTitle"/>
  <style
    name="ListItemTransaction"
    parent="ListItem.Normal"/>
  <style name="ListItemTransactionText">
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">@color/black</item>
    <item name="fontPath">@string/font.gotham_rounded.book</item>
  </style>
  <style
    name="ListItemTransactionName"
    parent="ListItemTransactionText">
    <item name="android:gravity">bottom</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style
    name="BaseListItemTransactionType"
    parent="ListItemTransactionText">
    <item name="android:gravity">top</item>
    <item name="android:textSize">10sp</item>
  </style>
  <style
    name="ListItemTransactionType"
    parent="BaseListItemTransactionType"/>
  <!-- Add another account styles -->
