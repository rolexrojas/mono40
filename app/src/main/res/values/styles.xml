<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Private styles -->
  <style name="Base"/>

  <style name="Base.App.Theme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:alertDialogTheme">@style/Dialog.Theme</item>
    <item name="colorAccent">@color/app_accent</item>
    <item name="colorPrimary">@color/app_primary</item>
    <item name="colorPrimaryDark">@color/app_primary_dark</item>
  </style>
  <style name="Base.App.ThemeOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark">
    <item name="colorAccent">@color/white</item>
  </style>

  <style name="Base.CropImage.Theme" parent="Theme.AppCompat.Light">
    <item name="actionMenuTextColor">@color/white</item>
    <item name="android:textColorPrimary">@color/white</item>
    <item name="colorPrimary">@color/app_primary</item>
    <item name="colorPrimaryDark">@color/app_primary_dark</item>
    <item name="titleTextColor">@color/white</item>
  </style>

  <style name="Base.Label"/>
  <style name="Base.Label.Dark">
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="Base.Label.Dark.Primary">
    <item name="android:textSize">20sp</item>
    <item name="fontPath">@string/font_gotham_round_medium</item>
  </style>
  <style name="Base.Label.Dark.Secondary">
    <item name="android:textSize">15sp</item>
    <item name="android:lineSpacingExtra">10sp</item>
    <item name="fontPath">@string/font_gotham_round_book</item>
  </style>

  <style name="Base.Widget"/>

  <style name="Base.Widget.Button">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/app_primary</item>
    <item name="android:textSize">14sp</item>
    <item name="fontPath">@string/font_gotham_round_bold</item>
  </style>
  <style name="Base.Widget.Button.Solid"/>
  <style name="Base.Widget.Button.Solid.Dark"/>
  <style name="Base.Widget.Button.Solid.Dark.Rounded">
    <item name="android:background">@drawable/widget_button_solid_dark_rounded_shape</item>
  </style>
  <style name="Base.Widget.Button.Gradient"/>
  <style name="Base.Widget.Button.Gradient.Dark">
    <item name="android:background">@drawable/widget_button_gradient_dark_shape</item>
  </style>

  <style name="Base.Widget.TextInput" parent="Widget.AppCompat.EditText">
    <item name="android:textCursorDrawable">@drawable/widget_text_input_dark_cursor</item>
    <item name="android:textSize">16sp</item>
    <item name="fontPath">@string/font_gotham_round_book</item>
  </style>
  <style name="Base.Widget.TextInput.Dark">
    <item name="android:background">@drawable/widget_text_input_dark</item>
    <item name="android:textColor">@color/widget_text_input_dark</item>
    <item name="android:textColorHint">@color/widget_text_input_dark_text_alpha_50</item>
    <item name="android:theme">@style/App.ThemeOverlay.Dark</item>
  </style>

  <style name="Base.Widget.NotEditableTextInput.Dark" parent="Base.Widget.TextInput.Dark">
    <item name="android:gravity">center</item>
    <item name="android:maxLines">1</item>
    <item name="android:textSize">34sp</item>
    <item name="fontPath">@string/font_gotham_round_light</item>
  </style>

  <style name="Base.Widget.NumPadRow">
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <style name="Base.Widget.NumPadCell">
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:clickable">true</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dp</item>
  </style>
  <style name="Base.Widget.NumPadCell.Text">
    <item name="android:gravity">center</item>
    <item name="android:lineSpacingExtra">2sp</item>
    <item name="android:textSize">24sp</item>
    <item name="fontPath">@string/font_gotham_round_medium</item>
  </style>
  <style name="Base.Widget.NumPad">
    <item name="dotEnabled">false</item>
    <item name="deleteDrawable">@drawable/ic_backspace_black_24dp</item>
  </style>
  <style name="Base.Widget.NumPad.Dark">
    <item name="color">@color/widget_num_pad_dark_color</item>
    <item name="android:theme">@style/App.ThemeOverlay.Dark</item>
  </style>
  <style name="Base.Widget.NumPad.Light">
    <item name="color">@color/widget_num_pad_light_color</item>
  </style>

  <style name="Base.Widget.FullSizeLoadIndicator" parent="Theme.AppCompat"/>
  <style name="Base.Widget.FullSizeLoadIndicator.Light">
    <item name="android:windowBackground">@color/load_indicator_full_size_background_window</item>
    <item name="colorAccent">@color/load_indicator_full_size_accent</item>
    <item name="colorPrimary">@color/load_indicator_full_size_primary</item>
    <item name="colorPrimaryDark">@color/load_indicator_full_size_primary_dark</item>
  </style>

  <style name="Base.Dialog"/>
  <style name="Base.Dialog.Label">
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">@dimen/dialog_label_text</item>
    <item name="fontPath">@string/font_roboto_regular</item>
    <item name="android:lineSpacingExtra">@dimen/dialog_label_line_extra_space</item>
  </style>
  <style name="Base.Dialog.Label.Action">
    <item name="android:textColor">@color/dialog_label_action</item>
  </style>
  <style name="Base.Dialog.Label.Message">
    <item name="android:textColor">@color/dialog_label_message</item>
  </style>
  <style name="Base.Dialog.Title.Appearance" parent="TextAppearance.AppCompat.Title">
    <item name="android:textColor">@color/dialog_title</item>
    <item name="android:textSize">@dimen/dialog_label_title_text_size</item>
  </style>
  <style name="Base.Dialog.Title" parent="Base.DialogWindowTitle.AppCompat">
    <item name="android:lineSpacingExtra">@dimen/dialog_label_title_line_extra_space</item>
    <item name="android:textAppearance">@style/Dialog.Title.Appearance</item>
    <item name="fontPath">@string/font_roboto_medium</item>
  </style>
  <style name="Base.Dialog.Theme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:textColorPrimary">@color/dialog_label_message</item>
    <item name="android:windowTitleStyle">@style/Dialog.Title</item>
  </style>

  <!-- Public styles -->
  <style name="App.Theme" parent="Base.App.Theme"/>
  <style name="App.ThemeOverlay.Dark" parent="Base.App.ThemeOverlay.Dark"/>

  <style name="CropImage.Theme" parent="Base.CropImage.Theme"/>

  <style name="Label.Dark.Primary" parent="Base.Label.Dark.Primary"/>
  <style name="Label.Dark.Secondary" parent="Base.Label.Dark.Secondary"/>

  <style name="Widget.Button.Solid.Dark.Rounded" parent="Base.Widget.Button.Solid.Dark.Rounded"/>
  <style name="Widget.Button.Gradient.Dark" parent="Base.Widget.Button.Gradient.Dark"/>

  <style name="Widget.TextInput.Dark" parent="Base.Widget.TextInput.Dark"/>

  <style name="Widget.NotEditableTextInput.Dark" parent="Base.Widget.NotEditableTextInput.Dark"/>

  <style name="Widget.NumPadRow" parent="Base.Widget.NumPadRow"/>
  <style name="Widget.NumPadCell" parent="Base.Widget.NumPadCell"/>
  <style name="Widget.NumPadCell.Text" parent="Base.Widget.NumPadCell.Text"/>
  <style name="Widget.NumPad.Dark" parent="Base.Widget.NumPad.Dark"/>
  <style name="Widget.NumPad.Light" parent="Base.Widget.NumPad.Light"/>

  <style name="Widget.FullSizeLoadIndicator.Light" parent="Base.Widget.FullSizeLoadIndicator.Light"/>

  <style name="Dialog.Label.Action" parent="Base.Dialog.Label.Action"/>
  <style name="Dialog.Label.Message" parent="Base.Dialog.Label.Message"/>
  <style name="Dialog.Title.Appearance" parent="Base.Dialog.Title.Appearance"/>
  <style name="Dialog.Title" parent="Base.Dialog.Title"/>
  <style name="Dialog.Theme" parent="Base.Dialog.Theme"/>
</resources>