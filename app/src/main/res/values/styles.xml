  <style name="Base.Dialog"/>
  <style name="Base.Dialog.Label">
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">@dimen/dialog_label_text</item>
    <item name="fontPath">@string/font_roboto_regular</item>
    <item name="android:lineSpacingExtra">@dimen/dialog_label_line_extra_space</item>
  </style>
  <style name="Base.Dialog.Label.Action">
    <item name="android:textColor">@color/dialog_label_action</item>
  </style>
  <style name="Base.Dialog.Label.Message">
    <item name="android:textColor">@color/dialog_label_message</item>
  </style>
  <style name="Base.Dialog.Title.Appearance" parent="TextAppearance.AppCompat.Title">
