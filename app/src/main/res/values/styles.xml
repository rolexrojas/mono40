  <style
    name="BaseProductAliasText"
    parent="App.Text">
    <item name="android:textColor">#333</item>
    <item name="android:textSize">12sp</item>
    <item name="fontPath">@string/font.gotham_rounded.light</item>
  </style>
  <style
    name="ProductAliasText"
    parent="BaseProductAliasText"/>
