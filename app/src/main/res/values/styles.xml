    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:textSize">14sp</item>
    <item name="fontPath">@string/font_gotham_rounded_bold</item>
  </style>

  <style name="Base.Widget"/>
  <style name="Base.Widget.Button">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:textAppearance">@style/App.Text.Label</item>
  </style>
  <style name="Base.Widget.Button.Colored">
    <item name="android:background">@drawable/button_colored_shape</item>
  </style>
  <style name="Base.Widget.Button.Colored.Rounded">
    <item name="android:background">@drawable/button_colored_rounded_shape</item>
  </style>
  <style name="Base.Widget.EditText">
    <item name="android:background">@drawable/edit_text_background</item>
    <item name="android:textColor">@color/edit_text_content</item>
    <item name="android:textColorHint">@color/edit_text_hint</item>
    <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    <item name="android:textSize">@dimen/edit_text_content_size</item>
    <item name="fontPath">@string/edit_text_content_font</item>
  </style>

  <style name="Base.Theme"
    parent="Theme.AppCompat.Light.NoActionBar">
    <!--<item name="android:buttonStyle">@style/App.Widget.Button</item>-->
    <!--<item name="android:editTextStyle">@style/App.Widget.EditText</item>-->
    <item name="android:windowBackground">@color/window_background_default</item>
    <item name="autoResizeablePrefixableTextViewStyle">
      @style/App.Widget.AutoResizeablePrefixableTextView
    </item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="numPadStyle">@style/App.Widget.NumPad</item>
    <item name="prefixableTextViewStyle">@style/App.Widget.PrefixableTextView</item>
    <item name="searchViewStyle">@style/App.Widget.SearchView</item>
  </style>

  <style name="App"
    parent="Base"/>

  <style name="App.Text"
    parent="Base.Text"/>
  <style name="App.Text.Label"
    parent="Base.Text.Label"/>

  <style name="App.Widget"
