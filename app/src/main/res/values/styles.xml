<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- [START] App styles -->
  <style name="Base"/>

  <style name="Base.App.Theme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:alertDialogTheme">@style/Dialog.Theme</item>
    <item name="colorAccent">@color/app_accent</item>
    <item name="colorPrimary">@color/app_primary</item>
    <item name="colorPrimaryDark">@color/app_primary_dark</item>
  </style>
  <style name="Base.App.ThemeOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark">
    <item name="colorAccent">@color/white</item>
  </style>
  <style name="Base.App.ThemeOverlay.Light" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="Base.CropImage.Theme" parent="Theme.AppCompat.Light">
    <item name="actionMenuTextColor">@color/white</item>
    <item name="android:textColorPrimary">@color/white</item>
    <item name="colorPrimary">@color/app_primary</item>
    <item name="colorPrimaryDark">@color/app_primary_dark</item>
    <item name="titleTextColor">@color/white</item>
  </style>

  <style name="Base.Label"/>
  <style name="Base.Label.Dark">
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="Base.Label.Dark.Primary">
    <item name="android:textSize">20sp</item>
    <item name="fontPath">@string/font_gotham_round_medium</item>
  </style>
  <style name="Base.Label.Dark.Secondary">
    <item name="android:textSize">15sp</item>
    <item name="android:lineSpacingExtra">10sp</item>
    <item name="fontPath">@string/font_gotham_round_book</item>
  </style>

  <style name="Base.Widget"/>

  <style name="Base.Widget.Button">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">36dp</item>
    <item name="android:layout_width">125dp</item>
    <item name="android:textColor">@color/app_primary</item>
    <item name="android:textSize">14sp</item>
    <item name="fontPath">@string/font_gotham_round_bold</item>
  </style>
  <style name="Base.Widget.Button.Dark">
    <item name="android:theme">@style/App.ThemeOverlay.Dark</item>
  </style>
  <style name="Base.Widget.Button.Dark.Gradient">
    <item name="android:background">@drawable/widget_button_dark_gradient_shape</item>
  </style>
  <style name="Base.Widget.Button.Dark.Solid"/>
  <style name="Base.Widget.Button.Dark.Solid.Rounded">
    <item name="android:background">@drawable/widget_button_dark_solid_rounded_shape</item>
  </style>
  <style name="Base.Widget.Button.Dark.Transparent"/>
  <style name="Base.Widget.Button.Dark.Transparent.Rounded">
    <item name="android:background">@drawable/widget_button_dark_transparent_rounded_shape</item>
    <item name="android:textColor">@color/widget_button_dark_transparent_text</item>
  </style>
  <style name="Base.Widget.Button.Light">
    <item name="android:theme">@style/App.ThemeOverlay.Light</item>
  </style>
  <style name="Base.Widget.Button.Light.Solid">
    <item name="android:background">@drawable/widget_button_light_solid_shape</item>
  </style>

  <style name="Base.Widget.TextInput" parent="Widget.AppCompat.EditText">
    <item name="android:textSize">16sp</item>
    <item name="fontPath">@string/font_gotham_round_book</item>
  </style>
  <style name="Base.Widget.TextInput.Dark">
    <item name="android:background">@drawable/widget_text_input_dark</item>
    <item name="android:textColor">@color/widget_text_input_dark</item>
    <item name="android:textColorHint">@color/widget_text_input_dark_text_alpha_50</item>
    <item name="android:textCursorDrawable">@drawable/widget_text_input_dark_cursor</item>
    <item name="android:theme">@style/App.ThemeOverlay.Dark</item>
  </style>
  <style name="Base.Widget.TextInput.Light">
    <item name="android:background">@drawable/widget_text_input_light</item>
    <item name="android:textColor">@color/widget_text_input_light</item>
    <item name="android:textColorHint">@color/widget_text_input_light_text_alpha_50</item>
    <item name="android:textCursorDrawable">@drawable/widget_text_input_light_cursor</item>
    <item name="android:theme">@style/App.ThemeOverlay.Light</item>
  </style>

  <style name="Base.Widget.NotEditableTextInput.Dark" parent="Base.Widget.TextInput.Dark">
    <item name="android:gravity">center</item>
    <item name="android:maxLines">1</item>
    <item name="android:textSize">34sp</item>
    <item name="fontPath">@string/font_gotham_round_light</item>
  </style>

  <style name="Base.Widget.NumPadRow">
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">match_parent</item>
  </style>
  <style name="Base.Widget.NumPadCell">
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:clickable">true</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
