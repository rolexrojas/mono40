    <item name="android:textColor">@color/commerce_payment_option_text_default</item>
  </style>
  <style name="Base.Text.CommercePaymentOption.ProductIdentifier">
    <item name="android:textSize">
      @dimen/commerce_payment_option_product_identifier_default_text_size
    </item>
    <item name="fontPath">@string/commerce_payment_option_product_identifier_text_font</item>
  </style>
  <style name="Base.Text.CommercePaymentOption.ProductNumber">
    <item name="android:textSize">@dimen/commerce_payment_option_product_number_default_text_size
