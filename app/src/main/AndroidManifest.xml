<manifest
  package="com.tpago.movil"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">
  <uses-feature
    android:name="android.hardware.nfc"
    android:required="false"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.READ_CONTACTS"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
  <uses-permission android:name="android.permission.READ_SMS"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <application
    android:name="com.tpago.movil.app.App"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/App.Theme"
    tools:replace="android:icon,android:theme">
    <meta-data
      android:name="io.fabric.ApiKey"
      android:value="1222b6a0c933aee641154a066ae9daaa93d7d2d8"/>
    <paymentMethodChooserAdapter
      android:name="android.support.v4.content.FileProvider"
      android:authorities="${applicationId}.paymentMethodChooserAdapter"
      android:exported="false"
      android:grantUriPermissions="true">
      <meta-data
        android:name="android.support.FILE_PROVIDER_PATHS"
        android:resource="@xml/provider_paths"/>
    </paymentMethodChooserAdapter>
    <activity
      android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
      android:screenOrientation="portrait"
      android:theme="@style/D.CropImage.Theme"/>
    <activity
      android:name=".init.InitActivity"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="adjustResize">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <!-- [START] Deprecated -->
    <activity
      android:name="com.tpago.movil.d.ui.main.DepMainActivity"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="adjustResize"/>
    <activity
      android:name="com.tpago.movil.d.ui.main.recipients.AddRecipientActivity"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="adjustResize"/>
    <activity
      android:name="com.tpago.movil.d.ui.main.transactions.TransactionCreationActivity"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="adjustResize"/>
    <activity
      android:name="com.tpago.movil.d.ui.main.products.transactions.RecentTransactionsActivity"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="adjustResize"/>
    <activity
      android:name=".d.ui.main.recipients.NonAffiliatedPhoneNumberRecipientAdditionActivity"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="adjustResize"/>
    <!-- [END] Deprecated -->
  </application>
</manifest>
